<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Your colorPrimary is usually your toolbar color -->
        <item name="colorPrimary">@color/black</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Your application theme -->
    <style name="CustomAppTheme" parent="AppTheme">
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
    </style>

    <!-- DatePickerDialog and TimePickerDialog styles -->
    <style name="MyDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MyTimePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>

